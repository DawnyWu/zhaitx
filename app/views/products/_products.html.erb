<div class="ui four items">
  <% @products.each do |product| %>
    <div class="item">
      <div class="image">
        <%= image_tag product.image %>
      </div>
      <div class="content">
        <div class="name"><%= product.name %></div>
        ï¿¥<%= product.price %><br/>
        <%= select_tag "number", options_for_select((1..10).step(1)),
        class: 'number'  %>
        <%= link_to add_to_path(product), method: :put,remote: true  do %>
          <span class="ui right red mini button">
          <i class="cart icon"></i>
            Add to Cart
          </span>
        <% end %>
        <p class="description"><%= product.description.truncate(100) %></p>
      </div>
    </div>
  <% end %>
</div>